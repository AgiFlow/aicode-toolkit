{
  "name": "@agiflowai/scaffold-mcp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/scaffold-mcp/src",
  "projectType": "library",
  "sourceTemplate": "typescript-mcp-package",
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "script": "build"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/scaffold-mcp"],
      "options": {
        "reportsDirectory": "../../coverage/packages/scaffold-mcp"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/scaffold-mcp"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check packages/scaffold-mcp"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --write packages/scaffold-mcp"
      }
    }
  },
  "tags": ["type:mcp-server", "scope:tools"]
}
