{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@agiflowai/aicode-utils",
  "projectType": "library",
  "sourceRoot": "packages/aicode-utils/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsdown",
        "cwd": "packages/aicode-utils"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/aicode-utils"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check packages/aicode-utils"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --write packages/aicode-utils"
      }
    }
  },
  "tags": ["type:library"],
  "sourceTemplate": "typescript-lib"
}
