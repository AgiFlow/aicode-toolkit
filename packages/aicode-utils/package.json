{
  "name": "@agiflowai/aicode-utils",
  "description": "Shared utilities and types for AI-powered code generation, scaffolding, and analysis",
  "version": "1.0.13",
  "license": "AGPL-3.0",
  "author": "AgiflowIO",
  "repository": {
    "type": "git",
