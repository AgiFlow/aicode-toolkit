{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun ./packages/architect-mcp/src/cli.ts get-file-design-pattern --hook ClaudeCode.PreToolUse"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun ./packages/architect-mcp/src/cli.ts review-code-change --hook ClaudeCode.PostToolUse"
          }
        ]
      }
    ]
  }
}
