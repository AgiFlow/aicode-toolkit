{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun ./packages/scaffold-mcp/src/cli.ts hook --type claude-code.preToolUse"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun ./packages/architect-mcp/src/cli.ts get-file-design-pattern --hook claude-code.preToolUse"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun ./packages/architect-mcp/src/cli.ts review-code-change --hook claude-code.postToolUse"
          }
        ]
      },
      {
        "matcher": "mcp__one-mcp__use_tool",
        "hooks": [
          {
            "type": "command",
            "command": "bun ./packages/scaffold-mcp/src/cli.ts hook --type claude-code.postToolUse"
          }
        ]
      }
    ]
  }
}
