{
  "name": "aicode-toolkit",
  "owner": {
    "name": "AgiFlow",
    "email": "vuong@agiflow.io"
  },
  "metadata": {
    "description": "AI-powered development tools organized by project maturity and purpose. Install only what you need for your development stage.",
    "version": "0.4.1"
  },
  "plugins": [
    {
      "name": "aicode-bootstrap",
      "source": {
        "source": "npm",
        "package": "@agiflowai/scaffold-mcp"
      },
      "description": "üöÄ Bootstrap Phase: Create new projects from boilerplate templates. Perfect for starting new applications with Next.js, React, Vite, and more.",
      "version": "0.4.1",
      "author": {
        "name": "AgiflowIO"
      },
      "homepage": "https://github.com/AgiFlow/aicode-toolkit#readme",
      "repository": "https://github.com/AgiFlow/aicode-toolkit",
      "license": "AGPL-3.0",
      "keywords": [
        "bootstrap",
        "boilerplate",
        "project-creation",
        "starter",
        "nextjs",
        "react",
        "vite"
      ],
      "category": "productivity",
      "tags": ["bootstrap", "new-project", "starter"],
      "mcpServers": {
        "aicode-bootstrap": {
          "command": "npx",
          "args": [
            "-y",
            "@agiflowai/scaffold-mcp",
            "mcp-serve"
          ]
        }
      },
      "strict": false
    },
    {
      "name": "aicode-develop",
      "source": {
        "source": "npm",
        "package": "@agiflowai/scaffold-mcp"
      },
      "description": "üî® Development Phase: Add features to existing projects and get design pattern guidance. Scaffold pages, components, services while following architectural patterns. Includes /edit-with-pattern slash command and 3 specialized agents (Architecture Review, Test Coverage, Migration Assistant) for complex tasks.",
      "version": "0.4.1",
      "author": {
        "name": "AgiflowIO"
      },
      "homepage": "https://github.com/AgiFlow/aicode-toolkit#readme",
      "repository": "https://github.com/AgiFlow/aicode-toolkit",
      "license": "AGPL-3.0",
      "keywords": [
        "development",
        "features",
        "scaffolding",
        "design-patterns",
        "architecture"
      ],
      "category": "productivity",
      "tags": ["development", "features", "patterns"],
      "commands": [
        "./configs/claude-code/commands/edit-with-pattern.md"
      ],
      "agents": [
        "./configs/claude-code/agents/architecture-reviewer.md",
        "./configs/claude-code/agents/test-coverage.md",
        "./configs/claude-code/agents/migration-assistant.md"
      ],
      "mcpServers": {
        "aicode-scaffold": {
          "command": "npx",
          "args": [
            "-y",
            "@agiflowai/scaffold-mcp",
            "mcp-serve"
          ]
        },
        "aicode-patterns": {
          "command": "npx",
          "args": [
            "-y",
            "@agiflowai/architect-mcp",
            "--design-pattern-tool",
            "claude-code"
          ]
        }
      },
      "strict": false
    },
    {
      "name": "aicode-review",
      "source": {
        "source": "npm",
        "package": "@agiflowai/architect-mcp"
      },
      "description": "‚úÖ Quality Phase: Enforce code quality and review standards. Review code changes against architectural rules and coding standards for mature projects.",
      "version": "0.4.1",
      "author": {
        "name": "AgiflowIO"
      },
      "homepage": "https://github.com/AgiFlow/aicode-toolkit#readme",
      "repository": "https://github.com/AgiFlow/aicode-toolkit",
      "license": "AGPL-3.0",
      "keywords": [
        "code-review",
        "quality",
        "standards",
        "rules",
        "governance"
      ],
      "category": "code-quality",
      "tags": ["review", "quality", "standards"],
      "mcpServers": {
        "aicode-review": {
          "command": "npx",
          "args": [
            "-y",
            "@agiflowai/architect-mcp",
            "mcp-serve",
            "--review-tool",
            "claude-code"
          ]
        }
      },
      "strict": false
    },
    {
      "name": "aicode-admin",
      "source": {
        "source": "npm",
        "package": "@agiflowai/scaffold-mcp"
      },
      "description": "‚öôÔ∏è Customization Phase: Create and manage custom templates, patterns, and rules. For platform engineers and framework authors building reusable templates.",
      "version": "0.4.1",
      "author": {
        "name": "AgiflowIO"
      },
      "homepage": "https://github.com/AgiFlow/aicode-toolkit#readme",
      "repository": "https://github.com/AgiFlow/aicode-toolkit",
      "license": "AGPL-3.0",
      "keywords": [
        "admin",
        "templates",
        "customization",
        "platform",
        "framework"
      ],
      "category": "productivity",
      "tags": ["admin", "templates", "customization"],
      "mcpServers": {
        "aicode-scaffold-admin": {
          "command": "npx",
          "args": [
            "-y",
            "@agiflowai/scaffold-mcp",
            "mcp-serve",
            "--admin-enable"
          ],
          "env": {
            "AICODE_MODE": "admin"
          }
        },
        "aicode-architect-admin": {
          "command": "npx",
          "args": [
            "-y",
            "@agiflowai/architect-mcp",
            "mcp-serve",
            "--admin-enable"
          ],
          "env": {
            "AICODE_MODE": "admin"
          }
        }
      },
      "strict": false
    }
  ]
}
